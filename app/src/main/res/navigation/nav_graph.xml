<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fitnesstrackerapp2.MainFragment"
        android:label="Main Fragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_addActivityFragment"
            app:destination="@id/addActivityFragment" />
        <action
            android:id="@+id/action_mainFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/addActivityFragment"
        android:name="com.example.fitnesstrackerapp2.AddActivityFragment"
        android:label="Add Activity Fragment"
        tools:layout="@layout/fragment_add_activity">
        <action
            android:id="@+id/action_addActivityFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.fitnesstrackerapp2.HistoryFragment"
        android:label="History Fragment"
        tools:layout="@layout/fragment_history" />
</navigation>
